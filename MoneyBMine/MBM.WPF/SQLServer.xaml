<Window x:Class="MBM.WPF.SQLServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MBM.WPF"
        mc:Ignorable="d"
        Title="SQLServer" Height="450" Width="800">
    <Grid>
        <Label Name="lblHddSpace" Content="Hard Disk Drive Space Free" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Name="lblCPU" Content="CPU Utilization" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0" FontSize="20" FontWeight="Bold"/>
        <Label Name="lblMemory" Content="Memory Utilization" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,150,0,0" FontSize="20" FontWeight="Bold"/>
        <Button Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="50,300,0,0" VerticalAlignment="Top" Width="100" FontSize="20" FontWeight="Bold" Click="BtnClose_Click"/>
    </Grid>
</Window>
